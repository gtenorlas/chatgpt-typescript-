{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2020"],
    "module": "es2022",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "ESNext",
    "types": ["node"],
    "outDir": "./build",
    "noImplicitAny": false
  },
  "include": [
    "./src/"
  ],
  "exclude": ["node_modules"]
}
